---
export const prerender = false;

import BaseLayout from "../../../layouts/BaseLayout.astro";
import OnboardSteps, {
	OnboardStep,
} from "../../../components/console/onboard/OnboardSteps";
import OnboardProject from "../../../components/console/onboard/OnboardProject";

// Using `meta.env` requires `prerender = false`
const BENCHER_API_URL = import.meta.env.BENCHER_API_URL;
---

<BaseLayout
  title="Project Name"
  description="Setup a new Project on Bencher"
>
<OnboardSteps slot="navbar" step={OnboardStep.PROJECT} />

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-half">
        <div class="content has-text-centered">
        <h1 class="title is-1">Name your first project</h1>
        <h2 class="subtitle is-4">Pick a name for your project. You can always change it later.</h2>
        <OnboardProject client:only="solid-js" apiUrl={BENCHER_API_URL} />
      </div>
    </div>
    </div>
  </div>
</section>

<div slot="footer" />
</BaseLayout>