import ThemeWordmark from "../navbar/theme/ThemeWordmark.astro";
---

<footer class="footer" style="margin-top: 1rem;">
	<div class="container">
		<div class="columns is-vcentered">
			<div class="column">
				<div class="content">
					<h2 class="title is-4">
						<a class="navbar-item" title="🐰 Bencher" href="/">
							<ThemeWordmark />
